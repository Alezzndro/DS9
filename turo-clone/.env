# Variables de entorno para el servidor

# Puerto del servidor
PORT=5000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/turo-clone

# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=tu-clave-secreta-super-segura-aqui-cambiar-en-produccion

# URLs permitidas para CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Configuración de email (para verificación y recuperación de contraseña)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-contraseña-de-aplicacion

# Configuración de almacenamiento de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880  # 5MB en bytes

# Configuración de sesiones
SESSION_SECRET=otra-clave-secreta-para-sesiones

# Entorno (development, production)
NODE_ENV=development

# URL base de la aplicación
APP_URL=http://localhost:3000

# Clave secreta de Stripe
STRIPE_SECRET_KEY=sk_test_..